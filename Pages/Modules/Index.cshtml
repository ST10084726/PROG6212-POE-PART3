@page
@model ModuleCalculatorWeb.Pages.Modules.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Module[0].ModuleCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Module[0].ModuleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Module[0].Credits)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Module[0].HoursPerWeek)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Module[0].SelfStudy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Module[0].ReaminingHoursLeft)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Module) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ModuleCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModuleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Credits)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoursPerWeek)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SelfStudy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReaminingHoursLeft)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.moduleID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.moduleID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.moduleID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
